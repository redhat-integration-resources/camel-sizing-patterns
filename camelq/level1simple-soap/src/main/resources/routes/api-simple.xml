<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://camel.apache.org/schema/spring"
        xsi:schemaLocation="
            http://camel.apache.org/schema/spring
            http://camel.apache.org/schema/spring/camel-spring.xsd">


<!--     <route id="cxf">
      <from uri="cxf:bean:s1"/>
      <log message="Hello from CXF: ${body}"/>
      <log message="Hello from CXF: ${body[0]}"/>
    </route> -->

    <!-- Write your routes here, for example: -->
    <route id="xml">

      <from uri="direct:getDetails"/>

      <!-- REQUEST TRANSFORMATION -->
      <to uri="direct:json2soap"/>

      <!-- CALL to BACKEND -->
      <setHeader name="CamelDestinationOverrideUrl">
          <simple>http://{{api.backend1.host}}/services/s1</simple>
      </setHeader>
      <to uri="cxf:bean:s1"/>

      <!-- RESPONSE TRANSFORMATION -->
      <to uri="direct:soap2json"/>

    </route>
   


    <route id="json2soap">
      <from uri="direct:json2soap"/>
      <convertBodyTo type="String"/>
      <setHeader name="json">
        <simple>${body}</simple>
      </setHeader>
      <setBody>
        <constant>&lt;data/&gt;</constant>
      </setBody>
      <!-- <log message="json2xml->JSON:\n${header.json}"/> -->
      <to uri="xslt-saxon:xslt/j2s.xsl"/>
      <!-- <log message="json2xml->XML:\n${body}"/> -->
<!--       <unmarshal>
        <jaxb contextPath="org.example.s1"/>
      </unmarshal> -->
    </route> 


    <route id="soap2json">
      <from uri="direct:soap2json"/>
      <setBody>
        <simple>${body[0]}</simple>
      </setBody>
      <!-- <log message="xml2json->XML:\n${body}"/> -->
      <to uri="xslt-saxon:xslt/s2j.xsl"/>
      <!-- <log message="xml2json->JSON:\n${body}"/> -->
      <setHeader name="Content-Type">
        <constant>application/json</constant>
      </setHeader>
    </route>

</routes>